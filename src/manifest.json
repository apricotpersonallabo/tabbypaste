{
  "manifest_version": 3,
  "version": "1.0.3",
  "name": "__MSG_extName__",
  "default_locale": "en",
  "description": "__MSG_extDescription__",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "32": "icons/icon32.png"
    },
    "default_popup": "popup.html",
    "default_title": "__MSG_openPopup__"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "clipboardRead"
  ],
  "commands": {
    "auto_paste": {
      "suggested_key": {
        "default": "Ctrl+Shift+V"
      },
      "description": "__MSG_command_auto_paste__"
    }
  }
}